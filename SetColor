import lejos.robotics.subsumption.Behavior;

public class SetColor implements Behavior {

	@Override
	public boolean takeControl() {
		// TODO Auto-generated method stub
		if(ColorSet == false){
			ColorSet = !ColorSet;
			return true;
		}
		return false;
	}

	@Override
	public void action() {
		// TODO Auto-generated method stub
		
		
		//Print Options to Screen
		
		//Set colorPath to blue, green, or red
		
	}

	@Override
	public void suppress() {
		// TODO Auto-generated method stub

	}

}
