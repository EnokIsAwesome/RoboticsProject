import lejos.robotics.subsumption.Behavior;

public class TargetFound implements Behavior {

	@Override
	private static int nearest;
	public boolean takeControl() {
		if (Driver.us.getDistance() < 200;){
			return true;
		}
		
		return false;
	}

	@Override
	public void action() {
		// TODO Auto-generated method stub
		nearest = 200;
		while( Driver.us.getDistance() < nearest){
		Driver.power.setRobotSpeed(5);
		Driver.power.travel(1);
		nearest = Driver.us.getDistance();
		}
		if(Driver.us.getDistance() => nearest){
			Driver.power.stop();
			Driver.targetAquired = true;
		}
	}

	@Override
	public void suppress() {
		// TODO Auto-generated method stub

	}

}
